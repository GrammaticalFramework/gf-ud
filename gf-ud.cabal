category:            Language
build-type:          Simple
extra-source-files:  CHANGELOG.md, README.md
cabal-version:       >=1.10

executable gf-ud
  main-is:             MainUDGF.hs
  other-modules: Backend
               , DBNF
               , GF2UD
               , GFConcepts
               , RTree
               , UD2GF
               , UDAnalysis
               , UDAnnotations
               , UDConcepts
               , UDOptions
               , UDStandard
               , UDVisualization
               , UDPatterns

  -- other-extensions:
  build-depends:       base, containers, pretty, gf, process, filepath, split
  -- hs-source-dirs:
  default-language:    Haskell2010

library
  exposed-modules:
    RTree,
    UDStandard,
    UDConcepts,
    UDPatterns,
    UDAnalysis,
    UDOptions,
    UDVisualization,
    TransformUD,
    GFConcepts,
    UDAnnotations,
    UD2GF,
    GF2UD,
    Backend,
    DBNF,
    AutoAnnotations

  build-depends:       base, containers, pretty, gf, process, filepath, split
  default-language:    Haskell2010

test-suite gfud-testsuite
  type:                     exitcode-stdio-1.0
  hs-source-dirs:           tests
  main-is:                  TestSuite.hs
  build-depends:            base, gf-ud, gf, hspec